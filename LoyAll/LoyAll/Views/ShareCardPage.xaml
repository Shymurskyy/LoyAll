<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LoyAll.Views.ShareCardPage"
             Title="UdostÄ™pnianie karty">

    <StackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="Center">

        <!-- QR Code Image -->
        <Image x:Name="QrCodeImage" WidthRequest="250" HeightRequest="250" />

        <!-- Label below QR Code -->
        <Label Text="QR code too big? Copy this text!" 
               FontSize="16"
               HorizontalOptions="Center"
               Margin="10,5,10,5"/>

        <!-- Clickable Label for Copying Data -->
        <Frame BackgroundColor="LightGray" Padding="10" CornerRadius="10">
            <Label x:Name="CompressedDataLabel"
                   Text="Compressed Data Here"
                   TextColor="Black"
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Padding="10">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCompressedDataTapped"/>
                </Label.GestureRecognizers>
            </Label>
        </Frame>

    </StackLayout>

</ContentPage>
