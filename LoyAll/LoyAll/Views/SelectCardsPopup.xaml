<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="LoyAll.Views.SelectCardsPopup"
    Size="300, 500"
    Color="Transparent">

    <Frame CornerRadius="20"
           Padding="0"
           HasShadow="True"
           BorderColor="#1DA1F2"
           BackgroundColor="#EBF5FB">

        <Grid RowDefinitions="Auto,*,Auto" 
              RowSpacing="0"
              Padding="10">

            <Label Text="Wybierz karty do udostępnienia" 
                   FontSize="18" 
                   TextColor="#1DA1F2"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Grid.Row="0"
                   Margin="0,10,0,10"/>

            <Frame CornerRadius="15"
                   Padding="10"
                   HasShadow="False"
                   BorderColor="Transparent"
                   BackgroundColor="#EBF5FB"
                   Grid.Row="1">
                <ScrollView>
                    <CollectionView ItemsSource="{Binding SelectableCards}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal" Spacing="10">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnRowTapped"/>
                                    </StackLayout.GestureRecognizers>

                                    <CheckBox IsChecked="{Binding IsSelected}" 
                                             Color="#1DA1F2"/>
                                    <Label Text="{Binding Card.StoreName}" 
                                           VerticalOptions="Center"
                                           TextColor="Black"/>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.Header>
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <CheckBox x:Name="SelectAllCheckBox"
                                         Color="#1DA1F2"
                                         CheckedChanged="OnSelectAllCheckedChanged"/>
                                <Label Text="Wybierz wszystkie" 
                                       VerticalOptions="Center"
                                       TextColor="#1DA1F2"
                                       FontAttributes="Bold">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnSelectAllLabelTapped"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </CollectionView.Header>
                    </CollectionView>
                </ScrollView>
            </Frame>

            <Grid ColumnDefinitions="*,*" 
                  ColumnSpacing="10"
                  Grid.Row="2"
                  Margin="0,15,0,10">
                <Button Text="Udostępnij" 
                        Clicked="OnShareClicked"
                        BackgroundColor="#1A8CD8"
                        TextColor="White"   
                        CornerRadius="10"
                        Grid.Column="0"/>
                <Button Text="Anuluj" 
                        Clicked="OnCancelClicked"
                        BackgroundColor="LightGray"
                        TextColor="Black"
                        CornerRadius="10"
                        Grid.Column="1"/>
            </Grid>
        </Grid>
    </Frame>
</toolkit:Popup>