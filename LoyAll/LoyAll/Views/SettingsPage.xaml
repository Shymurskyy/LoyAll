<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Plugin.MauiMTAdmob.Controls;assembly=Plugin.MauiMtAdmob"
             Shell.NavBarIsVisible="False"
             x:Class="LoyAll.SettingsPage"
             Title="Ustawienia"
             BackgroundColor="White">
    <Grid RowDefinitions="Auto, *, Auto">
        <BoxView Color="#1DA1F2" 
                 Grid.Row="0"
                 HorizontalOptions="FillAndExpand"/>

        <StackLayout Orientation="Horizontal"
                     Grid.Row="0"
                     HorizontalOptions="Fill"
                     VerticalOptions="Center"
                     Padding="20,10">
            <Label Text="LoyAll"
                   TextColor="White"
                   FontSize="45"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="StartAndExpand"
                   FontFamily="LilitaOne"/>
        </StackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="0" Padding="20,40,0,0">
                <VerticalStackLayout Spacing="10" Padding="0,0,0,20">
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <Image Source="lock.svg"
                               WidthRequest="24"
                               HeightRequest="24"
                               VerticalOptions="Center"
                               Margin="0,0,10,0"
                               Grid.Column="0" />
                        <Label Text="Prywatność i bezpieczeństwo"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#1A8CD8"
                               VerticalOptions="Center"
                               Grid.Column="1" />
                    </Grid>

                    <StackLayout x:Name="PrivacyOptions" Spacing="10" Padding="10,0,0,0">
                        <Button Text="Ponownie wyświetl zgodę GDPR"
                                Clicked="OnShowGdprConsentClicked"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                HorizontalOptions="Start"
                                FontSize="14" />
                        <Button Text="Polityka prywatności"
                                Clicked="OnPrivacyPolicyClicked"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                HorizontalOptions="Start"
                                FontSize="14" />
                    </StackLayout>
                </VerticalStackLayout>

                <BoxView HeightRequest="1" Color="#E1E8ED" HorizontalOptions="Fill" Margin="0,0,0,20"/>

                <VerticalStackLayout Spacing="10" Padding="0,0,0,20">
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <Image Source="person.svg"
                               WidthRequest="24"
                               HeightRequest="24"
                               VerticalOptions="Center"
                               Margin="0,0,10,0"
                               Grid.Column="0" />
                        <Label Text="Konto"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#1A8CD8"
                               VerticalOptions="Center"
                               Grid.Column="1" />
                    </Grid>

                    <Button Text="Usuń dane"
                            Clicked="OnDeleteDataClicked"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            HorizontalOptions="Start"
                            FontSize="14"
                            Padding="10,0,0,0" />
                </VerticalStackLayout>

                <BoxView HeightRequest="1" Color="#E1E8ED" HorizontalOptions="Fill" Margin="0,0,0,20"/>

                <VerticalStackLayout Spacing="10" Padding="0,0,0,20">
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <Image Source="misc.svg"
                               WidthRequest="24"
                               HeightRequest="24"
                               VerticalOptions="Center"
                               Margin="0,0,10,0"
                               Grid.Column="0" />
                        <Label Text="Społeczność"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#1A8CD8"
                               VerticalOptions="Center"
                               Grid.Column="1" />
                    </Grid>

                    <StackLayout Spacing="10" Padding="10,0,0,0">
                        <Button Text="Zaproś znajomych"
                                Clicked="OnInviteFriendsClicked"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                HorizontalOptions="Start"
                                FontSize="14" />
                        <Button Text="Oceń nas"
                                Clicked="OnRateUsClicked"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                HorizontalOptions="Start"
                                FontSize="14" />
                    </StackLayout>
                </VerticalStackLayout>

                <BoxView HeightRequest="1" Color="#E1E8ED" HorizontalOptions="Fill" Margin="0,0,0,20"/>

                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <Image Source="language.svg"
                               WidthRequest="24"
                               HeightRequest="24"
                               VerticalOptions="Center"
                               Margin="0,0,10,0"
                               Grid.Column="0" />
                        <Label Text="Język"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#1A8CD8"
                               VerticalOptions="Center"
                               Grid.Column="1" />
                    </Grid>

                    <Picker x:Name="LanguagePicker"
                            SelectedIndexChanged="OnLanguageSelected"
                            TextColor="Black"
                            FontSize="14"
                            Margin="10,0,0,0"
                            BackgroundColor="Transparent"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <controls:MTAdView 
            x:Name="AdmobBanner"
            AdsId="ca-app-pub-3940256099942544/6300978111"
            HeightRequest="50"
            Grid.Row="2" 
            HorizontalOptions="FillAndExpand"
            VerticalOptions="End"/>
    </Grid>
</ContentPage>