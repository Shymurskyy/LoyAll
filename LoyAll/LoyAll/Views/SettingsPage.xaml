<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LoyAll.SettingsPage"
             Title="Ustawienia"
             BackgroundColor="White"
             Padding="20">

    <ScrollView>
        <StackLayout Spacing="20">
            <!-- Ikona aplikacji -->
            <Frame HorizontalOptions="Center"
                   VerticalOptions="Center"
                   BackgroundColor="LightGray"
                   CornerRadius="50"
                   Padding="20"
                   WidthRequest="80"
                   HeightRequest="80"
                   HasShadow="True">
                <Label Text="i" 
                       FontSize="36" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       TextColor="Gray"/>
            </Frame>

            <!-- Wersja aplikacji -->
            <Label Text="Wersja 4.36.0 (9380)" 
                   FontSize="12" 
                   TextColor="Gray" 
                   HorizontalOptions="Center"/>

            <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand" />

            <!-- Prywatność i bezpieczeństwo -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Image Source="privacy_icon.png" WidthRequest="20" HeightRequest="20" />
                <Label Text="Prywatność i bezpieczeństwo" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
            </StackLayout>

            <Button Text="Pokaż więcej" 
                    Clicked="OnTogglePrivacyOptions" 
                    BackgroundColor="Transparent" 
                    TextColor="Blue" 
                    HorizontalOptions="Start" 
                    FontSize="14"/>

            <StackLayout x:Name="PrivacyOptions" IsVisible="False" Padding="10,0,0,0">
                <Button Text="Ponownie wyświetl zgodę GDPR" 
                        Clicked="OnShowGdprConsentClicked" 
                        BackgroundColor="Transparent" 
                        TextColor="Blue" 
                        HorizontalOptions="Start"
                        FontSize="14"/>
            </StackLayout>

            <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ScrollView>
</ContentPage>
