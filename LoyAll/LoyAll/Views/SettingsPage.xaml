<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Shell.NavBarIsVisible="False"
             x:Class="LoyAll.SettingsPage"
             Title="Ustawienia"
             BackgroundColor="White"
             Padding="20">

    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <Label Text="Ustawienia"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <Grid Padding="10" ColumnDefinitions="Auto, *" VerticalOptions="Center">
                <Image Source="lock.png"
                       WidthRequest="24"
                       HeightRequest="24"
                       VerticalOptions="Center"
                       Margin="0,0,10,0"
                       Grid.Column="0" />
                <Label Text="Prywatność i bezpieczeństwo"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center"
                       Grid.Column="1" />
            </Grid>

            <StackLayout x:Name="PrivacyOptions"
                         IsVisible="True"
                         Padding="10,0,0,0"
                         Spacing="10">
                <Button Text="Ponownie wyświetl zgodę GDPR"
                        Clicked="OnShowGdprConsentClicked"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        HorizontalOptions="Start"
                        FontSize="14" />
                <Button Text="Polityka prywatności"
                        Clicked="OnPrivacyPolicyClicked"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        HorizontalOptions="Start"
                        FontSize="14" />
            </StackLayout>
            
            <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand" />
            
            <Grid Padding="10" ColumnDefinitions="Auto, *" VerticalOptions="Center">
                <Image Source="person.png"
            WidthRequest="24"
            HeightRequest="24"
            VerticalOptions="Center"
            Margin="0,0,10,0"
            Grid.Column="0" />
                <Label Text="Konto"
            FontSize="16"
            FontAttributes="Bold"
            TextColor="Black"
            VerticalOptions="Center"
            Grid.Column="1" />
            </Grid>

            <StackLayout Padding="10,0,0,0" Spacing="10">
                <Button Text="Usuń dane"
             Clicked="OnDeleteDataClicked"
             BackgroundColor="Transparent"
             TextColor="Black"
             HorizontalOptions="Start"
             FontSize="14" />
            </StackLayout>

            <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand" />

            <Grid Padding="10" ColumnDefinitions="Auto, *" VerticalOptions="Center">
                <Image Source="misc.png"
                       WidthRequest="24"
                       HeightRequest="24"
                       VerticalOptions="Center"
                       Margin="0,0,10,0"
                       Grid.Column="0" />
                <Label Text="Inne"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center"
                       Grid.Column="1" />
            </Grid>

            <StackLayout Padding="10,0,0,0" Spacing="10">
                <Button Text="Zaproś znajomych"
                        Clicked="OnInviteFriendsClicked"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        HorizontalOptions="Start"
                        FontSize="14" />
                <Button Text="Oceń nas"
                        Clicked="OnRateUsClicked"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        HorizontalOptions="Start"
                        FontSize="14" />
            </StackLayout>
            
            <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand" />
            
            <Grid Padding="10" ColumnDefinitions="Auto, *" VerticalOptions="Center">
                <Image Source="language.png"
           WidthRequest="24"
           HeightRequest="24"
           VerticalOptions="Center"
           Margin="0,0,10,0"
           Grid.Column="0" />
                <Label Text="Język"
           FontSize="16"
           FontAttributes="Bold"
           TextColor="Black"
           VerticalOptions="Center"
           Grid.Column="1" />
            </Grid>

            <StackLayout Padding="10,0,0,0" Spacing="10">
                <Picker x:Name="LanguagePicker"
        SelectedIndexChanged="OnLanguageSelected"
        TextColor="Black"
        FontSize="14" />


            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
