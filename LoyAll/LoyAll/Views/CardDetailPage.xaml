<?xml version="1.0" encoding="utf-8" ?>
<the49:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
             xmlns:controls="clr-namespace:Plugin.MauiMTAdmob.Controls;assembly=Plugin.MauiMtAdmob"
             x:Class="LoyAll.CardDetailPage"
             BackgroundColor="White"
             CornerRadius="24"
             HasBackdrop="True"
             HasHandle="True"
             HandleColor="#1DA1F2">

    <the49:BottomSheet.Detents>
        <the49:ContentDetent />
        <the49:FullscreenDetent />
    </the49:BottomSheet.Detents>

    <ScrollView>
        <StackLayout Spacing="0">
            <BoxView 
                Color="LightGray" 
                HeightRequest="4" 
                WidthRequest="60"
                HorizontalOptions="Center"
                Margin="0,10,0,20"
                CornerRadius="20"/>
        <StackLayout Padding="20" Spacing="20">
            <Label x:Name="StoreNameLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <StackLayout Orientation="Horizontal" 
                        HorizontalOptions="Center"
                        Spacing="15">
                <Label Text="QR" 
                       VerticalOptions="Center"
                       FontSize="16"
                       TextColor="Gray"/>
                <Switch x:Name="BarcodeSwitch" 
                        Toggled="OnBarcodeSwitchToggled"
                        VerticalOptions="Center"/>
                <Label Text="Kod kreskowy" 
                       VerticalOptions="Center"
                       FontSize="16"
                       TextColor="Gray"/>
            </StackLayout>


            <Frame Padding="-20"
                   BackgroundColor="White"
                   HorizontalOptions="Center"
                   BorderColor="Transparent">
                <Image x:Name="CodeImage" 
                       HeightRequest="250"
                       WidthRequest="250"
                       Aspect="AspectFit"/>
            </Frame>

            <StackLayout Spacing="5">
                <Label x:Name="RealCardValueLabel"
                       FontSize="18"
                       TextColor="Gray"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
            </StackLayout>

            <controls:MTAdView 
                x:Name="AdmobBanner"
                AdsId="ca-app-pub-3940256099942544/6300978111"
                HeightRequest="50"/>
        </StackLayout>
        </StackLayout>
    </ScrollView>
</the49:BottomSheet>