<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LoyAll.CardDetailPage"
             Title="Szczegóły karty">
    <StackLayout Padding="20">
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Label Text="QR" VerticalOptions="Center"/>
            <Switch x:Name="BarcodeSwitch" Toggled="OnBarcodeSwitchToggled"/>
            <Label Text="Barcode" VerticalOptions="Center"/>
        </StackLayout>

        <Image x:Name="CardImage" 
           HeightRequest="400" 
           WidthRequest="400" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"/>

        <Label x:Name="StoreNameLabel"
           FontSize="24"
           HorizontalOptions="Center"
           TextColor="Black"/>

        <Image x:Name="CodeImage" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"/>

        <Label x:Name="CardValueLabel"
       FontSize="18"
       HorizontalOptions="Center"
       TextColor="Gray"
       Margin="0,10,0,0"/>
        <Label x:Name="RealCardValueLabel"
       FontSize="18"
       HorizontalOptions="Center"
       TextColor="Gray"
       Margin="0,10,0,0"/>
    </StackLayout>

</ContentPage>